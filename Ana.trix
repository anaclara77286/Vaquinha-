* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Arial, sans-serif;
}

body {
  background: linear-gradient(135deg, #00c853, #009624);
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.container {
  max-width: 420px;
  width: 100%;
  background: white;
  color: #333;
  border-radius: 20px;
  padding: 25px;
  text-align: center;
  box-shadow: 0 15px 40px rgba(0,0,0,0.25);
}

h1 {
  color: #00a152;
  margin-bottom: 10px;
}

.motivo {
  font-size: 15px;
  margin-bottom: 20px;
}

.meta {
  font-weight: bold;
  margin-bottom: 10px;
}

.progress {
  width: 100%;
  height: 22px;
  background: #e0e0e0;
  border-radius: 20px;
  overflow: hidden;
  margin-bottom: 10px;
}

.progress-bar {
  height: 100%;
  width: 25%;
  background: linear-gradient(90deg, #00c853, #64dd17);
}

.valor {
  margin-bottom: 20px;
  font-size: 14px;
}

.doar {
  width: 100%;
  padding: 14px;
  border: none;
  border-radius: 10px;
  font-size: 16px;
  font-weight: bold;
  cursor: pointer;
  background: #00c853;
  color: white;
}

